# --- STAGE 1: BUILDER (The Heavy Lifter) ---
# Use the full Python image for installing dependencies
FROM python:3.11-bullseye AS builder

# Set the working directory
WORKDIR /app

# Install minimum system dependencies needed for compiling small packages
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    build-essential \
    git \
    # Clean up apt cache immediately after installation
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install packages into a virtual environment
COPY requirements.txt .
RUN python -m venv /venv
ENV PATH="/venv/bin:$PATH"

# Install Python dependencies. fastembed is much smaller than sentence-transformers.
RUN pip install --no-cache-dir --timeout 300 -r requirements.txt

# Clean up the pip cache for minimal size
RUN rm -rf /root/.cache/pip

# --- STAGE 2: FINAL IMAGE (The Minimal Runner) ---
# Use the absolute slimmest Python image for the final deployment.
FROM python:3.11-slim-bullseye

# Set environment variables
ENV PYTHONUNBUFFERED 1
ENV PYTHONDONTWRITEBYTECODE 1

# Set the working directory
WORKDIR /app

# Copy the application code
COPY . .

# Copy the *pre-built and PRUNED* virtual environment from the builder stage
COPY --from=builder /venv /venv
ENV PATH="/venv/bin:$PATH"

# Define the command to run your application
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "$PORT"]
